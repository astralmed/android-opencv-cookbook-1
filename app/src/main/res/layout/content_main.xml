<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="study.self.opencv_cookbook.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="カメラ動画表示"
        android:id="@+id/showCamera"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="showCamera" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="色空間変更"
        android:id="@+id/showChangeColorSpace"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_below="@+id/showCamera"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/showCamera"
        android:layout_alignEnd="@+id/showCamera"
        android:onClick="showChangeColorSpace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="色情報表示"
        android:id="@+id/showColorData"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="showColorInfo"
        android:layout_below="@+id/showChangeColorSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/showChangeColorSpace"
        android:layout_alignEnd="@+id/showChangeColorSpace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mjpeg再生"
        android:id="@+id/showMjpeg"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="showMjpeg"
        android:layout_below="@+id/showColorData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/showColorData"
        android:layout_alignEnd="@+id/showColorData" />
</RelativeLayout>
