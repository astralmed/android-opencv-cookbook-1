<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="study.self.opencv_cookbook">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ColorSpaceActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".ColorInfoActivity" />
        <activity android:name=".MjpegActivity" />
        <activity android:name=".CameraFaceDetectActivity" />
        <activity android:name=".MjpegDetectActivity"></activity>
        <activity android:name=".CameraTemplateMachActivity"></activity>
    </application>

</manifest>
